<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="No_Title_Activity" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/act2_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/act1_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/act1_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/act2_slide_out</item>
    </style>

</resources>
